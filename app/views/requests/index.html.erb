<p id="notice"><%= notice %></p>

<% if logged_in? %>
  <h1>Requests</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= request.title %></td>
          <td><%= request.description %></td>
          <td><%= request.amount %></td>
          <td><%= request.location %></td>
            <td><%= link_to 'Show', request %></td>
            <td><%= link_to 'Edit', edit_request_path(request) %></td>
            <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="jumbotron">
    <h1>Welcome to Neighbors in Need!</h1>
    <p>Login or Signup to make or fulfill requests for aid</p>
  </div>
<% end %>
